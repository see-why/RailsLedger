<%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: {"data-turbo": "false", method: :post, class: "login-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email", class: "text-box" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",  class: "login-button" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>


